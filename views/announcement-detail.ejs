<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title><%= post.title %> · Announcement</title>

  <!-- Bootstrap / Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
  <link rel="icon" href="/images/storage.png" sizes="32x32">

  <!-- Project styles -->
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body data-is-admin="<%= !!isAdmin %>" data-post-id="<%= post._id %>">
<%
  // ===== Date helpers (Bangkok) =====
  const fmtDateTimeGB = (d) => {
    try {
      if (!d) return '';
      return new Date(d).toLocaleString('en-GB', {
        year: 'numeric', month: 'short', day: 'numeric',
        hour: '2-digit', minute: '2-digit',
        hour12: false, timeZone: 'Asia/Bangkok'
      });
    } catch { return ''; }
  };
  const isoDateTime = (d) => {
    try { return new Date(d).toISOString(); } catch { return ''; }
  };

  // ✅ คำนวณสถานะเร่งด่วนจาก category (และรองรับข้อมูลเก่า isUrgent เป็น fallback)
  const isCatUrgent = (post.category === 'urgent');
  const showUrgent  = (isCatUrgent || !!post.isUrgent);
%>

<div class="container my-4">

  <!-- Back + title & admin actions -->
  <div class="d-flex align-items-center justify-content-between mb-3">
    <a href="/public-home" class="btn btn-outline-secondary btn-sm">
      <i class="bi bi-arrow-left me-1"></i> Back
    </a>
  

    <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
      <div class="d-flex gap-2">
        <button class="btn btn-primary btn-sm" id="btn-edit">
          <i class="bi bi-pencil-square me-1"></i> Edit
        </button>
        <button class="btn btn-outline-danger btn-sm" id="btn-delete">
          <i class="bi bi-trash me-1"></i> Delete
        </button>
      </div>
    <% } %>
  </div>

  <!-- Header -->
  <header class="mt-1 mb-2">
    <h1 class="h3 mb-2"><%= post.title %></h1>
    <div class="text-muted small">
      <i class="bi bi-person-circle me-1"></i><%= post.author || '—' %>
      <span class="mx-2">·</span>
      <i class="bi bi-clock me-1"></i>
      <time datetime="<%= isoDateTime(post.publishedAt || post.createdAt) %>"
            data-order="<%= isoDateTime(post.publishedAt || post.createdAt) %>">
        <%= fmtDateTimeGB(post.publishedAt || post.createdAt) %>
      </time>

      <!-- ===== Badges: ไม่ซ้ำ Urgent/Category ===== -->
      <% if (post.category && !isCatUrgent) { %>
        <span class="mx-2">·</span>
        <span class="badge text-bg-secondary text-capitalize"><%= post.category %></span>
      <% } %>
      <% if (post.isPinned) { %>
        <span class="badge text-bg-warning ms-2">Pinned</span>
      <% } %>
      <% if (showUrgent) { %>
        <span class="badge text-bg-danger ms-2">Urgent</span>
      <% } %>
    </div>
  </header>

  <% if (post.imageUrl) { %>
    <div class="ratio ratio-21x9 mb-3">
      <img src="<%= post.imageUrl %>" class="w-100 h-100 object-fit-cover" alt="">
    </div>
  <% } %>
  

  <% if (post.excerpt) { %>
    <p class="text-muted"><%= post.excerpt %></p>
  <% } %>

  <!-- เนื้อหา: อนุญาต HTML จาก admin -->
  <div class="mt-3">
    <%- post.content || '' %>
  </div>
</div>

<!-- ===================== Edit Modal (ADMIN) ===================== -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content border-0 shadow">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title">
          <i class="bi bi-pencil-square me-2"></i>Edit Announcement
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="editForm" class="needs-validation" novalidate>
          <input type="hidden" id="edit-id" value="<%= post._id %>">

          <div class="row g-3">
            <div class="col-12">
              <label class="form-label">Title <span class="text-danger">*</span></label>
              <input class="form-control" id="edit-title" value="<%= post.title %>" required>
              <div class="invalid-feedback">กรุณากรอกหัวข้อ</div>
            </div>

            <div class="col-md-6">
              <label class="form-label">Category</label>
              <select class="form-select" id="edit-category">
                <option value="general" <%= post.category==='general'?'selected':'' %>>General</option>
                <option value="policy"  <%= post.category==='policy'?'selected':'' %>>Policy</option>
                <option value="urgent"  <%= post.category==='urgent'?'selected':'' %>>Urgent</option>
              </select>
              <div class="form-text">ถ้าเลือก <b>Urgent</b> ระบบจะตั้งค่าสถานะ Urgent ให้อัตโนมัติ</div>
            </div>

            <div class="col-md-6 d-flex align-items-end">
              <div class="form-check me-4">
                <input class="form-check-input" type="checkbox" id="edit-pinned" <%= post.isPinned ? 'checked' : '' %>>
                <label class="form-check-label" for="edit-pinned">Pinned</label>
              </div>
            </div>

            <div class="col-12">
              <label class="form-label">Image URL</label>
              <input class="form-control" id="edit-image" placeholder="https://..." value="<%= post.imageUrl || '' %>">
              <div class="form-text">ปล่อยว่างได้ถ้าไม่มีภาพ</div>
            </div>

            <div class="col-12">
              <label class="form-label">Excerpt</label>
              <textarea class="form-control" id="edit-excerpt" rows="2"><%= post.excerpt || '' %></textarea>
              <div class="form-text">ข้อความสั้น ๆ ใต้หัวข้อ</div>
            </div>

            <div class="col-12">
              <label class="form-label">Content (HTML allowed)</label>
              <textarea class="form-control" id="edit-content" rows="8"><%= post.content || '' %></textarea>
              <div class="form-text">สามารถวาง HTML ได้ (เช่น &lt;p&gt;...&lt;/p&gt;)</div>
            </div>
          </div>
        </form>

        <!-- ภาพตัวอย่าง -->
        <div class="mt-3 <%= post.imageUrl ? '' : 'd-none' %>" id="preview-wrap">
          <div class="small text-muted mb-1">Image preview</div>
          <img id="preview-img" src="<%= post.imageUrl || '' %>" class="img-fluid rounded border">
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button class="btn btn-primary" id="saveEditBtn">
          <i class="bi bi-save me-1"></i> Save
        </button>
      </div>
    </div>
  </div>
</div>

<!-- ===================== Delete Modal (ADMIN) ===================== -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title">
          <i class="bi bi-exclamation-triangle-fill me-2"></i>ยืนยันการลบ
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        ต้องการลบประกาศนี้หรือไม่?
        <div class="mt-2 small text-muted">“<%= post.title %>”</div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-outline-secondary" data-bs-dismiss="modal">ยกเลิก</button>
        <button class="btn btn-danger" id="confirmDeleteBtn">ลบ</button>
      </div>
    </div>
  </div>
</div>

<!-- ===================== Scripts ===================== -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
(function () {
  const body = document.body;
  const isAdmin = body.dataset.isAdmin === 'true';
  const postId  = body.dataset.postId;

  // ถ้าไม่ใช่แอดมิน ก็ไม่ต้องผูกอีเวนต์ปุ่ม/โมดัล
  if (!isAdmin) return;

  // อ้างอิงองค์ประกอบ
  const editModalEl   = document.getElementById('editModal');
  const deleteModalEl = document.getElementById('deleteModal');
  const editModal     = editModalEl ? new bootstrap.Modal(editModalEl) : null;
  const deleteModal   = deleteModalEl ? new bootstrap.Modal(deleteModalEl) : null;

  const el = {
    title:        document.getElementById('edit-title'),
    excerpt:      document.getElementById('edit-excerpt'),
    content:      document.getElementById('edit-content'),
    category:     document.getElementById('edit-category'),
    pinned:       document.getElementById('edit-pinned'),
    image:        document.getElementById('edit-image'),
    previewWrap:  document.getElementById('preview-wrap'),
    previewImg:   document.getElementById('preview-img'),
    saveBtn:      document.getElementById('saveEditBtn'),
    btnEdit:      document.getElementById('btn-edit'),
    btnDelete:    document.getElementById('btn-delete'),
    confirmDelete:document.getElementById('confirmDeleteBtn'),
    editForm:     document.getElementById('editForm')
  };

  // Safety guard
  if (!el.btnEdit || !editModal || !deleteModal) return;

  // Live preview image
  el.image?.addEventListener('input', () => {
    const url = el.image.value.trim();
    if (url) {
      el.previewWrap.classList.remove('d-none');
      el.previewImg.src = url;
    } else {
      el.previewWrap.classList.add('d-none');
      el.previewImg.removeAttribute('src');
    }
  });

  // เปิด Edit Modal
  el.btnEdit.addEventListener('click', () => editModal.show());

  // บันทึกการแก้ไข
  el.saveBtn.addEventListener('click', async () => {
    el.editForm.classList.add('was-validated');
    if (!el.title.value.trim()) return;

    const original = el.saveBtn.innerHTML;
    el.saveBtn.disabled = true;
    el.saveBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Saving...';

    try {
      const patch = {
        title: el.title.value.trim(),
        excerpt: el.excerpt.value,
        content: el.content.value,
        category: el.category.value,
        isPinned: !!el.pinned.checked,
        // ✅ ผูก urgent กับ category
        isUrgent: el.category.value === 'urgent',
        imageUrl: el.image.value.trim()
      };

      const res = await fetch(`/api/announcements/${postId}`, {
        method: 'PUT',
        headers: { 'Content-Type':'application/json' },
        body: JSON.stringify(patch)
      });
      const json = await res.json().catch(() => ({}));
      if (!res.ok || !json.ok) throw new Error(json.message || 'Update failed');

      editModal.hide();
      location.reload();
    } catch (err) {
      alert(err.message || 'เกิดข้อผิดพลาดในการเชื่อมต่อ');
      el.saveBtn.disabled = false;
      el.saveBtn.innerHTML = original;
    }
  });

  // เปิด Delete Modal
  el.btnDelete.addEventListener('click', () => deleteModal.show());

  // ยืนยันลบ
  el.confirmDelete.addEventListener('click', async () => {
    const original = el.confirmDelete.innerHTML;
    el.confirmDelete.disabled = true;
    el.confirmDelete.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> กำลังลบ...';

    try {
      const res = await fetch(`/api/announcements/${postId}`, { method:'DELETE' });
      const json = await res.json().catch(() => ({}));
      if (!res.ok || !json.ok) throw new Error(json.message || 'ลบไม่สำเร็จ');

      deleteModal.hide();
      location.href = '/public-home';
    } catch (err) {
      alert(err.message || 'เกิดข้อผิดพลาดในการเชื่อมต่อ');
      el.confirmDelete.disabled = false;
      el.confirmDelete.innerHTML = original;
    }
  });
})();
</script>
</body>
</html>
